<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.ubicollab.android.boxsynctest"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="17" />
    
    <uses-permission android:name="org.societies.android.SocialProvider.READ"/>
    <uses-permission android:name="org.societies.android.SocialProvider.WRITE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.ubicollab.android.boxsynctest.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.ubicollab.android.boxsynctest.CreateCommunityActivity"
            android:label="@string/title_activity_create_community"
            android:parentActivityName="org.ubicollab.android.boxsynctest.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.ubicollab.android.boxsynctest.MainActivity" />
        </activity>
        <activity
            android:name="org.ubicollab.android.boxsynctest.AddPersonActivity"
            android:label="@string/title_activity_add_person"
            android:parentActivityName="org.ubicollab.android.boxsynctest.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.ubicollab.android.boxsynctest.MainActivity" />
        </activity>
        <activity
            android:name="org.ubicollab.android.boxsynctest.ListCommunitiesActivity"
            android:label="@string/title_activity_list_communities" >
        </activity>
        <activity
            android:name="org.ubicollab.android.boxsynctest.ListPeopleActivity"
            android:label="@string/title_activity_list_people" >
        </activity>
        <activity
            android:name="org.ubicollab.android.boxsynctest.ShowCommunityActivity"
            android:label="@string/title_activity_show_community" >
        </activity>
    </application>

</manifest>