<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:useDefaultMargins="true"
    android:alignmentMode="alignBounds"
    android:columnOrderPreserved="false"
    android:scrollbars="vertical"

    android:columnCount="4" >
    
    <Button
        android:id="@+id/community_back_button"
        android:onClick="back"
        android:text="@string/community_back_button"
        android:layout_gravity="fill_horizontal"
        android:layout_columnSpan="4" />

    <TextView
        android:text="@string/community_name_hint"
        android:textStyle="bold"
        android:layout_columnSpan="1" />
    
    <TextView
        android:id="@+id/community_name_label"
        android:textIsSelectable="true"
        android:layout_columnSpan="3"
        android:text="@string/placeholder" />
    
    <TextView
        android:text="@string/community_type_hint"
        android:textStyle="bold"
        android:layout_columnSpan="1" />
    
    <TextView
        android:id="@+id/community_type_label"
        android:textIsSelectable="true"
        android:layout_columnSpan="3"
        android:text="@string/placeholder" />
    
    <TextView
        android:text="@string/community_owner_hint"
        android:textStyle="bold"
        android:layout_columnSpan="1" />
    
    <TextView
        android:id="@+id/community_owner_label"
        android:textIsSelectable="true"
        android:layout_columnSpan="3"
        android:text="@string/placeholder" />
    
    <TextView
        android:text="@string/community_description_hint"
        android:layout_columnSpan="4"
        android:textStyle="bold" />
    
    <TextView
        android:id="@+id/community_description_label"
        android:layout_columnSpan="4"
        android:layout_gravity="fill_horizontal"
        android:layout_rowSpan="3"
        android:textIsSelectable="true" />
    
    <Button
        android:id="@+id/community_show_members_button"
        android:onClick="showMembers"
        android:text="@string/community_show_members"
        android:layout_gravity="fill_horizontal"
        android:layout_columnSpan="2" />
    
    <Button
        android:id="@+id/community_edit_button"
        android:onClick="edit"
        android:text="@string/community_edit_button"
        android:layout_gravity="fill_horizontal"
        android:layout_columnSpan="2" />
    
    <Spinner
		android:id="@+id/service_list"
		android:layout_columnSpan="4"
		android:prompt="@string/service_list_prompt" />
    
    <Button
        android:id="@+id/service_share_button"
        android:onClick="shareService"
        android:layout_columnSpan="4"
        android:layout_gravity="fill_horizontal"
        android:text="@string/service_share_button" />
    
    <EditText
        android:id="@+id/community_message_field"
        android:layout_columnSpan="3"
        android:width="245dp"
        android:layout_gravity="fill_horizontal"
        android:hint="@string/community_message_hint"
        android:inputType="text" />
    
    <Button
        android:id="@+id/community_post_button"
        android:onClick="postMessage"
        android:layout_gravity="fill_horizontal"
        android:text="@string/community_post_button" />
    
    <ListView
        android:id="@+id/community_activity_list_view"
        android:layout_gravity="fill"
        android:layout_columnSpan="4" />

</GridLayout>
